
.typewriter {
	width: 390rpx;
	margin: auto;
}
.typewriter .text {
	font-size: 40rpx;
	overflow: hidden;
	border-right: 2rpx solid orange;
	white-space: nowrap;
	margin: 0 auto;
	letter-spacing: 2;
	-webkit-animation:typing 3.5s steps(40, end),blink-caret .75s step-end infinite;
	        animation:typing 3.5s steps(40, end),blink-caret .75s step-end infinite;
}
@-webkit-keyframes typing {
from {
		width: 0
}
to {
		width: 100%
}
}
@keyframes typing {
from {
		width: 0
}
to {
		width: 100%
}
}
@-webkit-keyframes blink-caret {
from,
	to {
		border-color: transparent
}
50% {
		border-color: orange;
}
}
@keyframes blink-caret {
from,
	to {
		border-color: transparent
}
50% {
		border-color: orange;
}
}

